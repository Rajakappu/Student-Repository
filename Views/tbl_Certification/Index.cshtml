@model IEnumerable<Repository.Models.tbl_Certification>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";

}

<h2>Certification Lists</h2> 

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CertificationID)
        </th>
            
        <th>
            @Html.DisplayNameFor(model => model.CertificationName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.About)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.CertificationID)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.CertificationName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.About)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.CertificationID }) |
        @Html.ActionLink("Details", "Details", new { id = item.CertificationID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.CertificationID })
    </td>
</tr>
    }

</table>
<div>
    @Html.ActionLink("Back", "Adminroles","Home")
</div>

