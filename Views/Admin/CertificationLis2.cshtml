@model IEnumerable<Repository.Models.tbl_Certification>

@{
    ViewBag.Title = "CertificationLis2";
    Layout = "~/Views/Shared/Logout.cshtml";

}

<h2>CertificationList</h2>

@if (Session["StudentID"]!=null)
{
<div align="center">
    @Html.ActionLink("Apply Certification", "Create", "tbl_Apply", "", new { @class = "btn btn-primary" })

</div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CertificationName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.About)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CertificationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.About)
            </td>

        </tr>
    }

</table>



<div>
    @Html.ActionLink("Back", "Studentroles", "Home")
</div>


